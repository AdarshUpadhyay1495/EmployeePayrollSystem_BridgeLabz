<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Payroll Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <div class="dashboard-header">
      <h1>Employee Payroll Dashboard</h1>
      <a href="/add" class="btn-add">+ Add Employee</a>
    </div>
    <p class="subtitle">All Employee Financial Details</p>
    
    <table class="payroll-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Department</th>
          <th>Basic Salary</th>
          <th>Tax (12%)</th>
          <th>Net Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => {
          const tax = emp.salary * 0.12;
          const netSalary = emp.salary - tax;
        %>
        <tr>
          <td><%= emp.id %></td>
          <td><%= emp.name %></td>
          <td><%= emp.email %></td>
          <td><%= emp.department %></td>
          <td>₹<%= emp.salary.toLocaleString('en-IN') %></td>
          <td>₹<%= tax.toLocaleString('en-IN', { maximumFractionDigits: 2 }) %></td>
          <td>₹<%= netSalary.toLocaleString('en-IN', { maximumFractionDigits: 2 }) %></td>
          <td class="actions">
            <a href="/edit/<%= emp.id %>" class="btn-edit">Edit</a>
            <a href="/delete/<%= emp.id %>" class="btn-delete" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>